<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/css/style.css' />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
  <title>
    <%= title %>
  </title>
</head>

<body>
  <div class="container">
    <h1>Matches</h1>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>East</th>
          <th>West</th>
          <th>Winner</th>
        </tr>
      </thead>
      <tbody>
        <% for (let match of data) { 
            const matchDate = new Date(match.date);%>
          <tr>
            <td>
              <a href="/match/<%=match.id%>">
                <%= `${matchDate.getMonth()+1}/${matchDate.getDate()}/${matchDate.getYear()+1900}` %>
              </a>
            </td>
            <td <%- match.winner === 'east'?'class="winner"':'' %>>
              <%= match.eastname %>
            </td>
            <td <%- match.winner === 'west'?'class="winner"':'' %>>
              <%= match.westname %>
            </td>
            <td>
              <%= match.winner %>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>